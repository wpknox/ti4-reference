@page "/promissorynotes"

<PageTitle>Promissory Notes</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h2" Class="mb-4">Promissory Notes</MudText>
</MudContainer>

@if (AllNotes is null || !AllNotes.Any())
{
    <LoadingWheel />
}
else
{
    @foreach (var note in AllNotes)
    {
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="@Typo.h4">@note.Name</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>@note.Description</MudText>
            </MudCardContent>
            @if (note.Faction is not null)
            {
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Tertiary"
                   @onclick="@(() => NavigateToFactionPage(note.Faction!))">
                        View @FactionMap.Factions[note.Faction!]
                    </MudButton>
                </MudCardActions>
            }
        </MudCard>
        <br />
    }
}