@page "/promissorynotes"

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h2" Class="mb-4">Promissory Notes</MudText>
</MudContainer>
@if (AllNotes is null)
{
    <MudContainer MaxWidth="MaxWidth.Medium">
        <MudText Typo="Typo.h2">Loading</MudText>
        <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true"/>
    </MudContainer>
}
else
{
    @foreach (var note in AllNotes)
    {
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="@Typo.h4">@note.Name</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>@note.Description</MudText>
            </MudCardContent>
        </MudCard>
        <br/>
    }
}